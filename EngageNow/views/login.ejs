<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    
    <%- include('partials/nav.ejs') %>
    
    <div class="container">
        <div class="card" id="card">
            <div class="front">
                <form class="form-container" id="login-form" method="POST" action="/log-in">
                    <h2>Login</h2>
                    <input type="text" class="form-control" name="username" id="login-username" placeholder="Username" required>
                    <input type="password" class="form-control" id="login-password" name="password" placeholder="Password" required>
                    <button type="submit" class="submit-button">Login</button>
                    <button type="button" class="flip-button" onclick="flipCard()">Don't have an account? Sign Up</button>
                    <button type="submit" class="submit-button">Sign in with <img src="/svg/google1.svg" alt=""></button>
                </form>
            </div>
            <div class="back">
                <form class="form-container" id="signup-form" method="POST" action="/sign-up">
                    <h2>Sign Up</h2>
                    <input type="text" class="form-control" name="username" id="signup-username" placeholder="Username" required>
                    <input type="password" class="form-control" id="signup-password" name="password" placeholder="Password" required>
                    <select name="role" id="role" class="form-control" onchange="showExtraFields()">
                        <option value="Resident">Resident</option>
                        <option value="Organizer">Organizer</option>
                    </select>
                    <div class="extra-fields" id="extra-fields">
                        <div>
                            <input type="text" class="form-control" name="organization" id="organization" placeholder="Organization Name" >
                            <input type="text" class="form-control" name="contact" id="contact" placeholder="Contact Number" >
                        </div>
                        <select name="location" class="form-control" placeholder="Location" >
                            <option value="Hyderabad">Hyderabad</option>
                            <option value="Bangalore">Bangalore</option>
                            <option value="Chennai">Chennai</option>
                            <option value="Mumbai">Mumbai</option>
                            <option value="Nellore">Nellore</option>
                        </select>
                        <div class="business-desc bus-desc">
                            <input type="file" name="image" class="image-button" >
                            <img src="image_upload.svg" class="img-but" alt="">
                            <h4>Upload Image</h4>
                        </div>
                    </div>
                    <button type="submit" class="submit-button">Sign Up</button>
                    <button type="button" class="flip-button" onclick="flipCard()">Already have an account? Login</button>
                    <button type="submit" class="submit-button">Sign Up with <img src="/svg/google1.svg" alt=""></button>
                </form>
            </div>
        </div>
    </div>

    <script src="/scripts/nav.js">
    </script>
</body>
</html>
